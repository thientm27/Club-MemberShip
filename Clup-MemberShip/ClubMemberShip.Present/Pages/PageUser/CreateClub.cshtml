@page
@model ClubMemberShip.Web.Pages.PageUser.CreateClubModel

@{
    Layout = "Shared/_UserLayout";
    ViewData["Title"] = "CreateClub";
}

<h1>CreateClub</h1>

<h4>Club</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Club.Code" class="control-label"></label>
                <input asp-for="Club.Code" class="form-control" required="required"/>
                <span asp-validation-for="Club.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.Name" class="control-label"></label>
                <input asp-for="Club.Name" class="form-control" required="required"/>
                <span asp-validation-for="Club.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.Logo" class="control-label"></label>
                <input asp-for="Club.Logo" class="form-control" required="required"/>
                <span asp-validation-for="Club.Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.ShortDecription" class="control-label"></label>
                <input asp-for="Club.ShortDecription" class="form-control" required="required"/>
                <span asp-validation-for="Club.ShortDecription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.LongDecription" class="control-label"></label>
                <input asp-for="Club.LongDecription" class="form-control"/>
                <span asp-validation-for="Club.LongDecription" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    DateTime defaultDate = DateTime.Today;
                }
                <label asp-for="Club.DateOfEstablishment" class="control-label"></label>
                <input asp-for="Club.DateOfEstablishment" class="form-control" min="@defaultDate.ToString("yyyy-MM-dd")" value="@defaultDate.ToString("yyyy-MM-dd")" readonly="readonly"/>
                <span asp-validation-for="Club.DateOfEstablishment" class="text-danger"></span>
            </div>
            <div>
                <p style="color: red; margin: 10px auto; width: max-content"> @Model.Msg</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}