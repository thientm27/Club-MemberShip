@page
@model ClubMemberShip.Web.Pages.PageUser.StudentActivity.CreateClubActivityModel

@{
    Layout = "Shared/_UserLayout";
    ViewData["Title"] = "Club Activity";
}

<h1>CreateClubActivity</h1>
<h4>ClubActivity</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClubActivity.ClubId" class="control-label"></label>
                <select asp-for="ClubActivity.ClubId" class="form-control" asp-items="ViewBag.ClubId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClubActivity.ActivityDetail" class="control-label"></label>
                <input asp-for="ClubActivity.ActivityDetail" class="form-control"/>
                <span asp-validation-for="ClubActivity.ActivityDetail" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    DateTime defaultDate = DateTime.Today;
                }
                <label asp-for="ClubActivity.StartDay" class="control-label"></label>
                <input asp-for="ClubActivity.StartDay" class="form-control" min="@defaultDate.ToString("yyyy-MM-dd")" value="@defaultDate.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="ClubActivity.StartDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    DateTime nextDate = DateTime.Today.AddDays(1);
                }
                <label asp-for="ClubActivity.EndDay" class="control-label"></label>
                <input asp-for="ClubActivity.EndDay" class="form-control" min="@nextDate.ToString("yyyy-MM-dd")" value="@nextDate.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="ClubActivity.EndDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubActivity.CreateDay" class="control-label"></label>
                <input asp-for="ClubActivity.CreateDay" class="form-control" readonly="readonly" value="@defaultDate.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="ClubActivity.CreateDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubActivity.TimeLine" class="control-label"></label>
                <input asp-for="ClubActivity.TimeLine" class="form-control" readonly="readonly"/>
                <span asp-validation-for="ClubActivity.TimeLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="../Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}