@page
@model ClubMemberShip.Web.Pages.PageAdmin.AdminGrade.IndexModel

@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].GradeYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].GraduateYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].GraduateExpected)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Grade) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GradeYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GraduateYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GraduateExpected)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
