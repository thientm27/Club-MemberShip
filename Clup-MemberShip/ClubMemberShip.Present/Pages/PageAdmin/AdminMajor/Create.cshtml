@page
@model ClubMemberShip.Web.Pages.PageAdmin.AdminMajor.CreateModel

@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Major</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Major.Code" class="control-label"></label>
                <input asp-for="Major.Code" class="form-control" required="required" />
                <span asp-validation-for="Major.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Major.Name" class="control-label"></label>
                <input asp-for="Major.Name" class="form-control"  required="required"/>
                <span asp-validation-for="Major.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Major.Detail" class="control-label"></label>
                <input asp-for="Major.Detail" class="form-control" />
                <span asp-validation-for="Major.Detail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Major.Semeter" class="control-label"></label>
                <input asp-for="Major.Semeter" class="form-control" max="9" min="0" />
                <span asp-validation-for="Major.Semeter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
